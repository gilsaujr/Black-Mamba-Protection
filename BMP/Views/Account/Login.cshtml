@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    string returnUrl = Request.QueryString["returnUrl"] != null ? Request.QueryString["returnUrl"].ToString() : string.Empty;
    if(string.IsNullOrEmpty(returnUrl)){
        returnUrl = Request.Form["returnUrl"] != null ? Request.Form["returnUrl"].ToString() : string.Empty;
    }
}

@section scripts{
    @Scripts.Render("~/scripts/login.js")
}

@if (TempData["ErrMsg"] != null)
{
    <h3 class="alert alert-danger" role="alert">@TempData["ErrMsg"].ToString()</h3>
}
else if (Request.Url.ToString().ToLower().IndexOf("fromlistener=1") > -1)
{
    <h3 class="alert alert-info" role="alert">A device has been detected. Please login to monitor devices.</h3>
}

<p>&nbsp;</p>
<p>&nbsp;</p>
<p>&nbsp;</p>
<p>&nbsp;</p>

