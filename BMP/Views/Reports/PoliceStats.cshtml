    ViewBag.Title = "Police Statistics Report";
}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="col-sm-4">
                    <div class="input-group">
                        <span class="input-group-addon">Workstation Name</span>
                        <input type="text" class="form-control" id="txt_Wk_Name" name="txt_Wk_Name" placeholder="workstation" />
                    </div>
                    <div class="input-group">
