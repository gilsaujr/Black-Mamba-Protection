@{
    ViewBag.Title = "Change Password";
}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="col-sm-4">
                    <div class="input-group">
                        <span class="input-group-addon">Old Password</span>
                        <input type="password" class="form-control" id="txt_DateFrom" name="txt_DateFrom" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">New Password</span>
                        <input type="password" class="form-control" id="txt_DateFrom" name="txt_DateFrom" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">Confirm New Password</span>
                        <input type="password" class="form-control" id="txt_DateFrom" name="txt_DateFrom" />
                    </div>
                    <br />
                    <span class="btn btn-sm btn-primary pull-right">Save</span>
                </div>
            </div>
        </div>
    </div>
</div>